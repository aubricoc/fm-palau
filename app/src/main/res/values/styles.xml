<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="fmpalau_theme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <style name="text_dialog">
        <item name="android:padding">@dimen/margin</item>
        <item name="android:background">@color/background_material_light</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_card">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="text_card_title" parent="@style/text_card">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_card_title_low" parent="@style/text_card">
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_card_side" parent="@style/text_card">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="text_card_content" parent="@style/text_card">
    </style>

    <style name="text_card_low" parent="@style/text_card">
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_card_great" parent="@style/text_card">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/secondary_text_default_material_dark</item>
    </style>

</resources>